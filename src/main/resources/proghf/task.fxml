<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proghf.controller.TaskController">
   <children>
      <VBox fx:id="body" prefHeight="548.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
             <ToolBar prefHeight="40.0" prefWidth="200.0">
                 <items>
                     <Button mnemonicParsing="false" onAction="#onBackPressed" text="Vissza" />
                 </items>
             </ToolBar>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="taskName" alignment="CENTER" text="Label" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Label>
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEditPressed" text="Szerkesztés">
                     <HBox.margin>
                        <Insets left="4.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="titleTextField" minWidth="0.0" onAction="#onSavePressed" prefWidth="0.0" visible="false" />
                  <Button fx:id="saveButton" minWidth="0.0" mnemonicParsing="false" onAction="#onSavePressed" prefWidth="0.0" text="Mentés">
                     <HBox.margin>
                        <Insets left="4.0" right="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
               <children>
                  <AnchorPane fx:id="taskBody" HBox.hgrow="SOMETIMES">
                     <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </HBox.margin></AnchorPane>
                  <VBox alignment="CENTER_LEFT" HBox.hgrow="SOMETIMES">
                     <children>
                        <Label alignment="CENTER_RIGHT" text="Címke hozzáadása:">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <TextField fx:id="labelTextField" onAction="#onNewLabelPressed" HBox.hgrow="SOMETIMES">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin></TextField>
                              <Button minWidth="27.0" mnemonicParsing="false" onAction="#onNewLabelPressed" text="+">
                                 <HBox.margin>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <ScrollPane fitToWidth="true" styleClass="edge-to-edge" VBox.vgrow="SOMETIMES">
                           <VBox.margin>
                              <Insets top="8.0" />
                           </VBox.margin>
                           <content>
                              <VBox fx:id="labelList" alignment="TOP_CENTER" />
                           </content>
                        </ScrollPane>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onDeletePressed" text="Törlés" />
                  <Button fx:id="archiveButton" mnemonicParsing="false" onAction="#onArchivePressed" text="Archiválás" />
               </children>
               <VBox.margin>
                  <Insets bottom="16.0" top="16.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
