<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="proghf.controller.TableColumnController">
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <VBox prefHeight="400.0" prefWidth="200.0">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
            <HBox>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Label fx:id="columnName" text="Címke neve">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="newButton" mnemonicParsing="false" onAction="#onNewTaskPressed" text="Új">
                    <HBox.margin>
                        <Insets right="4.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeletePressed" text="X"/>
            </HBox>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="4.0" top="4.0"/>
                </VBox.margin>
            </Separator>
            <VBox fx:id="taskItems" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS"/>
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="200.0"/>
    </HBox>
</AnchorPane>
