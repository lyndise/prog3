<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="proghf.controller.SearchController">
    <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ToolBar>
            <Button mnemonicParsing="false" onAction="#onBackPressed" text="Vissza"/>
        </ToolBar>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="8.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
            <Label text="Keresési eredmény">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                </VBox.margin>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0"
                            VBox.vgrow="ALWAYS">
                    <VBox fx:id="resultList" alignment="TOP_CENTER"/>
                </ScrollPane>
            </VBox>
        </VBox>

    </VBox>
</AnchorPane>
